{% extends 'base.html.twig' %}

{% block title %}BookBorrowing index{% endblock %}

{% block body %}
    <h1>BookBorrowing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserEmail</th>
                <th>BookIsbn</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book_borrowing in book_borrowings %}
