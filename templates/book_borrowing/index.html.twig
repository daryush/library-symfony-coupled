                <td>{{ book_borrowing.id }}</td>
                <td>{{ book_borrowing.userEmail }}</td>
                <td>{{ book_borrowing.bookIsbn }}</td>
                <td>{{ book_borrowing.endDate ? book_borrowing.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('book_borrowing_show', {'id': book_borrowing.id}) }}">show</a>
